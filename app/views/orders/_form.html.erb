<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h3>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="input-field col s6">
      <label for="order_customer_id" class="active">Customer</label>
      <%= f.collection_select :customer_id, Customer.all.alphabetical, :id, :name, prompt: "Select ..." %>
    </div>
    <div class="input-field col s6">
      <label for="order_address_id" class="active">Address</label>
      <%= f.select :address_id, get_address_options, prompt: "Select ..." %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s6">
      <%= f.label :grand_total %>
      <%= f.text_field :grand_total %>
    </div>
  </div>
  <div class="form-actions">
    <br>
    <%= f.submit nil, class: 'btn' %>
    <% if @order.created_at.blank? %>
      &nbsp;&nbsp;<%= link_to 'Cancel', orders_path, :class => 'btn deep-orange lighten-2' %>
    <% else %>
      &nbsp;&nbsp;<%= link_to 'Cancel', order_path(@order), :class => 'btn deep-orange lighten-2' %>
    <% end %>
  </div>
<% end %>