<% if @item.units_per_item = 1 %>
	<% if @item.category = "bread" %>
		<p>$<%= number_with_precision(@item.current_price, :precision => 2) %> per loaf</p>
	<% elsif @item.category = "muffin" %>
		<p>$<%= number_with_precision(@item.current_price, :precision => 2) %> per muffin</p>
	<% else %>
		<p>$<%= number_with_precision(@item.current_price, :precision => 2) %> per pastry</p>
	<% end %>
<% elsif @item.units_per_item = 6 %>
	<% if @item.category = "bread" %>
		<p>$<%= number_with_precision(@item.current_price, :precision => 2) %> per halfdozen loaves</p>
	<% elsif @item.category = "muffin" %>
		<p>$<%= number_with_precision(@item.current_price, :precision => 2) %> per halfdozen muffins</p>
	<% else %>
		<p>$<%= number_with_precision(@item.current_price, :precision => 2) %> per halfdozen pastries</p>
	<% end %>
<% elsif @item.units_per_item = 12 %>
	<% if @item.category = "bread" %>
		<p>$<%= number_with_precision(@item.current_price, :precision => 2) %> per @item.units_per_item loaves</p>
	<% elsif @item.category = "muffin" %>
		<p>$<%= number_with_precision(@item.current_price, :precision => 2) %> per @item.units_per_item muffins</p>
	<% else %>
		<p>$<%= number_with_precision(@item.current_price, :precision => 2) %> per @item.units_per_item pastries</p>
	<% end %>
<% else %>
	<% if @item.category = "bread" %>
		<p>$<%= number_with_precision(@item.current_price, :precision => 2) %> per @item.units_per_item loaves</p>
	<% elsif @item.category = "muffin" %>
		<p>$<%= number_with_precision(@item.current_price, :precision => 2) %> per @item.units_per_item muffins</p>
	<% else %>
		<p>$<%= number_with_precision(@item.current_price, :precision => 2) %> per @item.units_per_item pastries</p>
	<% end %>
<% end %>
