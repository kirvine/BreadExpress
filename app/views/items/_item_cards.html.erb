<div class="row">
  <% items.each do |item| %>
    <div class="col s4">
      <a href=<%=item_path(item) %>><div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <% if item.picture.blank? %>
            <%= image_tag("no_image.png", align: "left") %>
          <% else %>
            <%= image_tag(item.picture) %>
          <% end %>
          <span class="card-title"><%= item.name %></span>
        </div>
      </div>
    </div></a>
  <% end %>
</div>