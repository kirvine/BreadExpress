<div class="row">
  <% items.each do |item| %>
  <div class="col s4">
    <div class="card small">
      <div class="card-image">
        <% if item.picture_url.nil? %>
          <%= image_tag("no_image.png") %>
        <% else %>
          <img class="responsive-img" src=<%= item.picture_url %>>
        <% end %>
      </div>
      <div class="card-content image">
        <a href=<%=item_path(item) %>><span class="card-title"><%= item.name %></span></a>
        <p>$<%= number_with_precision(item.current_price, :precision => 2) %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>