<%= simple_nested_form_for @item, :html => { :class => 'form-horizontal' } do |item_form| %>
  <div class="row">
    <div class="col s7">
      <fieldset>
        <legend><%= controller.action_name.capitalize %> Item</legend>
        <%= render :partial => "fields_item", :locals => { :f => item_form } %>
      </fieldset>
    </div>

  <div class="col s5">
    <legend>Item Price</legend>
      <div id="fields_item_price">
        <%= item_form.simple_fields_for :items do |item_price_form| %>
          <%= render :partial => "fields_item_price", :locals => { :f => item_price_form } %>
        <% end %> 
        <p>
          <br /><%= item_form.link_to_add("Add Price", :item_prices, :class => 'button tiny') %>
        </p>
      </div> 
    </div>
  </div>
  <div class="form-actions">
    <%= item_form.submit nil, :class => 'button radius' %>
    <%= link_to 'Cancel', items_path, :class => 'button secondary' %>
  </div>
<% end %>