<%= simple_nested_form_for @item, :html => { :class => 'form-horizontal', :multipart => true } do |item_form| %>
  
  <div class="row">
    <div class="col s8">
      <%= render :partial => "fields_item", :locals => { :f => item_form } %>
    </div>
    <div class="col s8">
      <div id="item_item_prices">
        <%= item_form.simple_fields_for :item_prices do |item_price_form| %>
          <%= render :partial => "fields_item_price", :locals => { :f => item_price_form } %>
        <% end %> 
      </div>
    </div>
    
    <div class="form-actions">
      <div class="form-actions">
        <div class="col s8">
          <br>
          <button class="btn waves-effect waves-light" type="submit" name="action">Create Item</button>
          <% if @item.created_at.blank? %>
            &nbsp;&nbsp;<button class="waves-effect waves-light btn orange lighten-2" href="/addresses">Cancel</button>
          <% else %>
            &nbsp;&nbsp;<button class="waves-effect waves-light btn orange lighten-2" href="/addresses">Cancel</button>
          <% end %>
        </div>
      </div>
    </div>

  </div>
<% end %>