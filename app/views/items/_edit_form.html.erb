<%= simple_form_for @item, :html => { :class => 'form-horizontal', :multipart => true } do |item_form| %>

<div class="row">
  <div class="col s8">
    <%= render :partial => "fields_item", :locals => { :f => item_form } %>
  </div>
  
  <div class="form-actions">
    <div class="form-actions">
      <div class="col s8">
        <br>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
        <% if @item.created_at.blank? %>
          &nbsp;&nbsp;<button class="waves-effect waves-light btn" href="/items">Cancel</button>
        <% else %>
          &nbsp;&nbsp;<%= link_to "Cancel", item_path(@item), class: "waves-effect waves-light btn white-text orange lighten-2" %>
        <% end %>
      </div>
    </div>
  </div>

</div>
<% end %>