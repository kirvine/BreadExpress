<br>
<h2><%= @item.name %></h2>

<p>
  <h3><%= render partial: "price_per_unit" %></h3>
</p>

<p><br>
  <%= @item.description %> Total weight: <%= @item.weight %> lbs.
</p>

<br>
<%= link_to "Add to Cart", add_item_path(@item), method: :post, class: "waves-effect waves-light btn white-text" %>

<% if logged_in? && current_user.role?(:admin) %>
	<%= link_to "Edit", edit_item_path(@item), class: "waves-effect waves-light btn white-text" %>
	<% if @item.is_destroyable? %>
	<%= link_to "Delete", item_path(@item), method: :delete, data: { confirm: 'Are you sure you wish to delete this item?' }, class: "waves-effect waves-light btn white-text" %>
	<% end %>
<% end %>
