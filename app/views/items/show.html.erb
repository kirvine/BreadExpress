<div class="card">
  <div class="card-content">
    <% if logged_in? && (current_user.role?(:admin) || current_user.role?(:customer)) %>
      <div class="row">
        <div class="col s7">
          <%= render partial: "item_details" %>
        </div>
        <div class="col s5">
          <%= render partial: "price_hist" %>
        </div>
      </div>
    <% else %>
      <div class="col s4">
          <%= render partial: "item_image" %>
        </div>
        <div class="col s8">
          <%= render partial: "item_details" %>
        </div>
      </div>
    <% end %>
  </div>
</div>