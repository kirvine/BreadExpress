<div class="card">
  <div class="card-content">

    <div class="row">
    	<br>
      <div class="col s4">
      	<%= render partial: "item_image" %>
      </div>
      <div class="col s8">
        <%= render partial: "item_details" %>
      </div>
    </div>
    <div class="row">
    	<br>
      <div class="col s4">
      	<%= render partial: "similar_items" %>
      </div>
    </div>
    <p>Cart exists: <%= session[:cart].nil? %></p>
    <p>Items in cart: <%= session[:cart].size %></p>
    <%= button_to "add", add_item_path(@item) %>
  </div>
</div>
<br><br>