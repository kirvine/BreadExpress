<% unless @related_items.empty? %>
	<br><br>
	<h2>Similar Items</h2>
	<hr>

	<% @related_items.each do |item| %>
		<div class="col s3">
	  <div class="card tiny">
	      <div class="card-image">
	        <% if item.picture_url.nil? %>
	          <%= image_tag("no_image_small.png") %>
	        <% else %>
	        <%= image_tag(item.picture_url, height: "120") %>
	        <% end %>
	      </div>
	      <div class="card-content image">
	        <a href=<%=item_path(item) %>><span><%= item.name %></span></a>
	        <p><h5>$<%= number_with_precision(item.current_price, :precision => 2) %></h5></p>
	      </div>
	    </div>
	   </div>
	<% end %>
<% end %>
