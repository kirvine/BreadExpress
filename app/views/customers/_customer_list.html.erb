<div id=<%= state %> class="col s12">
<% if customers.empty? %>
  <br>
    <div class="card">
      <div class="card-content">
        <p>There are no <%= state %> customers at this time.</p>
      </div>
    </div>
  <br>
  
<% else %>
<br>
<div class="card">
  <div class="card-content">
    <table class="hoverable">
      <thead>
        <tr>
          <th align="center">Name</th>
          <th align="center">Phone</th>
          <th align="center">Email</th>
        </tr>
      </thead>

    <% customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.name, customer_path(customer) %></td>
        <td><%= number_to_phone customer.phone %></td>
        <td>
          <div id="email"><%= mail_to customer.email, customer.email, encode: "javascript" %>
          </div>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
</div>

  <!-- Add the pagination  -->
  <br>
  <span class="paginate">
    <%= will_paginate customers, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
  </span>
  <br>

<% end %>
</div>
</div>