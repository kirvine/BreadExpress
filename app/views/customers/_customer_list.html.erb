<div id=<%= state %> class="col s12">
<% if customers.empty? %>
  <br><p class="brown-text">There are no <%= state %> customers at this time.</p>
  <br><a class="waves-effect waves-light btn" href="/customers/new">New Customer</a>
  
<% else %>
<br>
  <table class="striped">
    <thead>
      <tr>
        <th width="300">Name</th>
        <th width="400">Phone</th>
        <th width="400">Email</th>
      </tr>
    </thead>

  <% customers.each do |customer| %>
    <tr>
      <td><%= link_to customer.name, customer_path(customer) %></td>
      <td align="center"><%= number_to_phone customer.phone %></td>
      <td>
        <div id="email"><%= mail_to customer.email, customer.email, encode: "javascript" %>
        </div>
      </td>
    </tr>
  <% end %>
  </table>

  <!-- Add the pagination  -->
  <br>
  <span class="paginate">
    <%= will_paginate customers, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
  </span>
  <br><a class="waves-effect waves-light btn" href="/customers/new">New Customer</a>

<% end %>
</div>
</div>