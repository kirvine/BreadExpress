<h2>Customer Details</h2>

<table>
  <tr> 
    <td>
      <%= render partial: "customer_data" %>
    </td>
    <td width="40">&nbsp;</td>
    <td>
      <% unless @order_history.empty? %>
			  <%= render partial: "order_history" %>
			<% end %>
    </td>
  </tr>
</table>

<p class="smtext">&nbsp;</p>
<p>&nbsp;
  <%= link_to "Edit", edit_customer_path(@customer) %> |
  <%= link_to "Destroy", @customer, method: :delete, data: { confirm: 'Are you sure you wish to delete this information?' } %> |
  <%= link_to "View Customers", customers_path %>
</p>

<p id="notice"><%= notice %></p>