<%= simple_nested_form_for @customer, :html => { :class => 'form-horizontal' } do |customer_form| %>

  <div class="row">
    <div class="col s12">
      <%= render :partial => "fields_customer", :locals => { :f => customer_form } %>
    </div>

    <div class="col s12">
      <%= customer_form.simple_fields_for :customers do |user_form| %>
        <%= render :partial => "fields_user", :locals => { :f => user_form } %>
      <% end %> 
    </div>

    <div class="form-actions">
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
      <i class="mdi-content-send right"></i>
      </button>
      <% if @customer.created_at.blank? %>
        &nbsp;&nbsp;<a class="waves-effect waves-light btn white-text" href="/addresses">Cancel</a>
      <% else %>
        &nbsp;&nbsp;<a class="waves-effect waves-light btn white-text" href="/addresses">Cancel</a>
      <% end %>
    </div>

  </div>
<% end %>