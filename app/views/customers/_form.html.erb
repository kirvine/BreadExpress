<%= simple_nested_form_for @customer, :html => { :class => 'form-horizontal' } do |customer_form| %>

  <div class="row">
    <div class="col s8">
      <%= render :partial => "fields_customer", :locals => { :f => customer_form } %>
    </div>

    <div class="col s8">
      <%= customer_form.simple_fields_for :user do |user_form| %>
        <%= render :partial => "fields_user", :locals => { :f => user_form } %>
      <% end %> 
    </div>

    <div class="form-actions">
      <div class="col s8">
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
      <% if @customer.created_at.blank? %>
        &nbsp;&nbsp;<button class="waves-effect waves-light btn" href="/addresses">Cancel</button>
      <% else %>
        &nbsp;&nbsp;<button class="waves-effect waves-light btn" href="/addresses">Cancel</button>
      <% end %>
      </div>
    </div>

  </div>
<% end %>