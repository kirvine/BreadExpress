<div class="row">
  <div class="col s8">
<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h3>

      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="input-field col s6">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="input-field col s6">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
  </div>

  <!-- only show active checkbox if admin -->
  <% if logged_in? && current_user.role?(:admin) %>
  <div class="field">
    <p><br>
      <%= f.check_box :active %>
      <%= f.label :active %>
    </p>
  </div>
  <% end %>

  <br>

  <div class="form-actions">
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
    <% if @customer.created_at.blank? %>
      &nbsp;&nbsp;<button class="waves-effect waves-light btn orange lighten-2" href="/customers">Cancel</button>
    <% else %>
      &nbsp;&nbsp;<%= link_to "Cancel", customer_path(@customer), class: "waves-effect waves-light btn white-text orange lighten-2" %>
    <% end %>
  </div>
<% end %>
  </div>
</div>