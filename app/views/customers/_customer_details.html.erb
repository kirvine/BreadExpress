<!-- customer data  -->

<p><b>Name:&nbsp;</b><%= @customer.proper_name %></p><br>

<p><b>Username:&nbsp;</b><%= @customer.user.username %></p><br>

<p><b>Password:&nbsp;</b>••••••</p>

<p><h5 class="deep-orange-text"><%= link_to "Reset Password", edit_user_path(current_user.customer.user) %></h5></p><br>


<p><b>Phone:&nbsp;</b><%= number_to_phone @customer.phone %></p><br>

<p><b>Email:&nbsp;</b><%= mail_to @customer.email, @customer.email, encode: "javascript" %></p><br>


<p><em>A Bread Express customer since <%= @customer.created_at.year %></em></p><br>


<!-- actions -->

<% if logged_in? && (current_user.role?(:admin) || current_user.role?(:customer)) %>
  <%= link_to "Edit Info", edit_customer_path(@customer), class: "waves-effect waves-light btn white-text" %>
<% end %>

<br><br>